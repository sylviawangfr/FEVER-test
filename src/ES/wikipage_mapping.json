{
  "mappings": {
      "properties": {
        "id" : {
          "type": "text",
          "term_vector": "with_positions_offsets",
          "analyzer": "underscore_analyzer",
          "fielddata": true
        },
        "text": {
          "type": "text",
          "term_vector": "with_positions_offsets",
          "analyzer": "wikipage_analyzer",
          "fielddata": true
        },
        "lines": {
          "type": "text",
          "term_vector": "with_positions_offsets",
          "analyzer": "wikipage_analyzer",
          "fielddata": true
        }
      }
  },
  "settings": {
    "analysis": {
      "filter" : {
            "stemmer_filter" : {
                "type" : "stemmer",
                "name" : "possessive_english"
            }
        },
      "char_filter": {
        "nfkc_normalizer": {
          "type": "icu_normalizer",
          "name": "nfkc"
        },
        "underscore_filter": {
          "type": "mapping",
          "mappings": ["_=>\\u0020"]
        }
      },
      "analyzer": {
        "underscore_analyzer": {
          "tokenizer": "standard",
          "char_filter":  [ "nfkc_normalizer",  "underscore_filter"],
          "filter":["lowercase", "stemmer_filter"]
        },
        "wikipage_analyzer": {
          "tokenizer": "standard",
          "filter": ["lowercase", "stemmer_filter"],
          "char_filter":["nfkc_normalizer"]
        }
      }
    }
  }
}